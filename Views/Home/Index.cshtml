@model IEnumerable<Crud.NET7.Models.Contact>
@{
    ViewData["Title"] = "Lista de contactos";
}

<h1 class="text-center">Contact .NET 7 MVC</h1>

<div class="row">
    <div class="offset-9 col-md-3 mb-3">
        <a asp-action="Create" asp-controller="Home" class="btn btn-secondary d-block mx-auto btn-lg"><i class="bi bi-file-plus-fill">Create New user</i></a>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>User Lists</strong></h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    @if (Model.Count() > 0)
                    {
                        <table class="table table-bordered" id="tblUsuario" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(a => a.Name)</th>
                                    <th>@Html.DisplayNameFor(a => a.Phone)</th>
                                    <th>@Html.DisplayNameFor(a => a.CellPhone)</th>
                                    <th>@Html.DisplayNameFor(a => a.Email)</th>
                                    <th>@Html.DisplayNameFor(a => a.CreateDate)</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(m => item.Name)</td>
                                        <td>@Html.DisplayFor(m => item.Phone)</td>
                                        <td>@Html.DisplayFor(m => item.CellPhone)</td>
                                        <td>@Html.DisplayFor(m => item.Email)</td>
                                        <td>@Html.DisplayFor(m => item.CreateDate)</td>
                                        <td>
                                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-fill">Editar</i></a>
                                            <a class="btn btn-secondary" asp-action="Detail" asp-route-id="@item.Id"><i class="bi bi-info-circle-fill">Detalle</i></a>
                                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-eraser-fill">Eliminar</i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>No hay registros</p>
                    }
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts{

    <script>

        $(document).ready(function(){

            $('#tblUsuario').DataTable();


        });


    </script>

}

