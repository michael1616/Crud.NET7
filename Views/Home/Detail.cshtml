@model Crud.NET7.Models.Contact
@{
    ViewData["Title"] = "Detalle de contactos";
}

<h1 class="text-center">Contact .NET 7 MVC</h1>


<div class="row">
    <div class="col-md-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Deatil Contact</strong></h3>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    <li class="list-group-item"><strong>Name: </strong>@Html.DisplayFor(a => a.Name)</li>
                    <li class="list-group-item"><strong>Phone: </strong>@Html.DisplayFor(a => a.Phone)</li>
                    <li class="list-group-item"><strong>CellPhone: </strong>@Html.DisplayFor(a => a.CellPhone)</li>
                    <li class="list-group-item"><strong>Email: </strong>@Html.DisplayFor(a => a.Email)</li>
                </ul>

                <a asp-controller="Home" asp-action="Index">Go to Home</a>
            </div>
        </div>
    </div>

</div>